<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/screen_bg"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView2"/>

    <TextView
            android:id="@+id/tv_descPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Você selecionou:"
            android:textSize="18dp"
            android:textColor="@color/lightgray"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>
    <android.support.v7.widget.CardView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_descPage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/cardView">
        <ImageView
                android:id="@+id/iv_tarefa_gerente"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/iconos_cs5_40_2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Gerente"
                android:textColor="@color/gray"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"/>

    </android.support.v7.widget.CardView>
    <TextView
            android:id="@+id/tv_title_gerente"
            android:layout_width="103dp"
            android:layout_height="23dp"
            android:text="Sua senha é:"
            android:textSize="18dp"
            android:textColor="@color/gray"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/cardView"/>
    <TextView
            android:id="@+id/tv_bv_Gerente"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="Aguarde ser chamado no telão"
            android:textSize="18dp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <TextView
            android:id="@+id/tv_phy_senha_gerente"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:text="PHY:"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/verdeEveri"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_gerente"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="89dp"
            android:layout_height="79dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>